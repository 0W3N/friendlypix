{
  "rules": "security-rules.json",
  "hosting": {
    "public": "./",
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "node_modules/**",
      "security-rules.json",
      "bower.json",
      "package.json",
      "README.md"
    ]
  }
}
